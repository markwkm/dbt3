create_table() {
	SQL=${1}

	$PSQL << __EOF__
$SQL;
__EOF__
	return $?
}

NUM_OR_FD="REAL"
INT_OR_FD="INTEGER"

PSQL="psql -v ON_ERROR_STOP=1 -X -A -t"

# if the FIXEDDECIMAL extension exists, use it instead of NUMERIC (or REAL).
RC=`$PSQL -c "SELECT 1 FROM pg_available_extensions WHERE name = 'fixeddecimal';"`
if [ "x$RC" = "x1" ]; then
	$PSQL -c "CREATE EXTENSION fixeddecimal;"
	NUM_OR_FD="FIXEDDECIMAL"
	INT_OR_FD="FIXEDDECIMAL"
fi

create_table "
CREATE TABLE supplier (
	s_suppkey  INTEGER,
	s_name CHAR(25),
	s_address VARCHAR(40),
	s_nationkey INTEGER,
	s_phone CHAR(15),
	s_acctbal $NUM_OR_FD,
	s_comment VARCHAR(101))
	DISTRIBUTE BY REPLICATION;" || exit 1

create_table "
CREATE TABLE part (
	p_partkey INTEGER,
	p_name VARCHAR(55),
	p_mfgr CHAR(25),
	p_brand CHAR(10),
	p_type VARCHAR(25),
	p_size INTEGER,
	p_container CHAR(10),
	p_retailprice $NUM_OR_FD,
	p_comment VARCHAR(23))
	DISTRIBUTE BY HASH (p_partkey);" || exit 1

create_table "
CREATE TABLE partsupp (
	ps_partkey INTEGER,
	ps_suppkey INTEGER,
	ps_availqty $INT_OR_FD,
	ps_supplycost $NUM_OR_FD,
	ps_comment VARCHAR(199))
	DISTRIBUTE BY HASH (ps_partkey);" || exit 1

create_table "
CREATE TABLE customer (
	c_custkey INTEGER,
	c_name VARCHAR(25),
	c_address VARCHAR(40),
	c_nationkey INTEGER,
	c_phone CHAR(15),
	c_acctbal $NUM_OR_FD,
	c_mktsegment CHAR(10),
	c_comment VARCHAR(117))
	DISTRIBUTE BY REPLICATION;" || exit 1

create_table "
CREATE TABLE orders (
	o_orderkey INTEGER,
	o_custkey INTEGER,
	o_orderstatus CHAR(1),
	o_totalprice $NUM_OR_FD,
	o_orderdate DATE,
	o_orderpriority CHAR(15),
	o_clerk CHAR(15),
	o_shippriority INTEGER,
	o_comment VARCHAR(79))
	DISTRIBUTE BY HASH (o_orderkey);" || exit 1

create_table "
CREATE TABLE lineitem (
	l_orderkey INTEGER,
	l_partkey INTEGER,
	l_suppkey INTEGER,
	l_linenumber INTEGER,
	l_quantity $NUM_OR_FD,
	l_extendedprice $NUM_OR_FD,
	l_discount $NUM_OR_FD,
	l_tax $NUM_OR_FD,
	l_returnflag CHAR(1),
	l_linestatus CHAR(1),
	l_shipdate DATE,
	l_commitdate DATE,
	l_receiptdate DATE,
	l_shipinstruct CHAR(25),
	l_shipmode CHAR(10),
	l_comment VARCHAR(44))
	DISTRIBUTE BY HASH (l_orderkey);" || exit 1

create_table "
CREATE TABLE nation (
	n_nationkey INTEGER,
	n_name CHAR(25),
	n_regionkey INTEGER,
	n_comment VARCHAR(152)) DISTRIBUTE BY REPLICATION;" || exit 1

create_table "
CREATE TABLE region (
	r_regionkey INTEGER,
	r_name CHAR(25),
	r_comment VARCHAR(152)) DISTRIBUTE BY REPLICATION;" || exit 1

create_table "
CREATE TABLE time_statistics (
	task_name VARCHAR(40),
	s_time TIMESTAMP,
	e_time TIMESTAMP);" || exit 1

$PSQL << __EOF__
CREATE SEQUENCE dataset
MINVALUE 1
START WITH 1;
SELECT nextval('dataset');
__EOF__
