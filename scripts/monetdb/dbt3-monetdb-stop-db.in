if [ -z $DBDIR ]; then
	echo "DBDIR not defined."
	exit 1
fi

monetdbd stop $DBDIR
# Ugly hack to wait until daemon has stopped.
while [ 1 ]; do
 	mclient -d dbt3 -s "select 1" > /dev/null 2>&1
	if [ $? -eq 0 ]; then
		sleep 1
	fi
	exit 0
done
