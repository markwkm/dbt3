if [ -z $DBDIR ]; then
    echo "DBDIR not defined."
    exit 1
fi

if [ -z $DBNAME ]; then
    echo "DBNAME environment variable not defined"
    exit 1
fi

monetdbd create $DBDIR
monetdbd start $DBDIR
monetdb create $DBNAME
monetdb release $DBNAME
