DIRECT_LOAD=0
NODES=0
OUTDIR="."
PRIVILEGED=1
# Custom argument handling for hopefully most portability.
while [ "${#}" -gt 0 ] ; do
	case "${1}" in
	(-C)
		shift
		CHUNKS="${1}"
		;;
	(-d)
		DIRECT_LOAD=1
		;;
	(-o)
		shift
		OUTDIR="${1}"
		;;
	(-U)
		PRIVILEGED=0
		;;
	(-V | --version)
		echo "$(basename "${0}") (Database Test 3) v@PROJECT_VERSION@"
		;;
	(-\? | --help)
		usage
		exit 0
		;;
	(--* | -*)
		echo "$(basename "${0}"): invalid option -- '${1}'"
		echo "try \"$(basename "${0}") --help\" for more information."
		exit 1
		;;
	(*)
		break
		;;
	esac
	shift
done

mkdir -p "${OUTDIR}/output"

# Automatically parallelize to the number of available processors if not
# specified otherwise.
if [ "x${CHUNKS}" = "x" ]; then
	if [ -f "/proc/stat" ]; then
		CPUS=`grep cpu /proc/stat | wc -l`
		CHUNKS=$(( $CPUS - 1 ))
		echo "detected $CHUNKS processors for parallel loading"
	else
		CHUNKS=1
	fi
fi

PSQL="psql -v ON_ERROR_STOP=1 -X"

echo "Loading tables `date`"

supplier
part
partsupp
customer
orders
lineitem
nation
region

echo "Building indexes `date`"

supplier_ind &
part_ind &
partsupp_ind &
customer_ind &
orders_ind &
lineitem_ind &
nation_ind &
region_ind &

wait
